#!/bin/bash

if [ "$1" != "" ]; then
    uri=$1
else
    uri="https://github.com/lantern-works/lantern-web/raw/master/build/latest.zip"
fi

echo "downloading web platform from: ${uri}"
wget "${uri}" -O /tmp/lantern-web.zip
rm -rf /opt/lantern/public/*
unzip "/tmp/lantern-web.zip" -d /opt/lantern/public
