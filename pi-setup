#!/bin/bash

echo "---------------------------------------------"
echo " Starting Lantern configuration..."
echo "---------------------------------------------"

# achieve parallel results as dockerfile
cp -rf /tmp/container/app/* /opt/lantern/
/tmp/container/system/hardware.sh # configure hardware
/tmp/container/system/software.sh # setup all software needed
/tmp/container/system/network.sh # setup discovery and networking
/tmp/container/system/service.sh # setup custom services

# prepare our system for first boot
/opt/lantern/bin/init
echo "---------------------------------------------"
echo " Your Lantern has been successfully configured"
echo "---------------------------------------------"